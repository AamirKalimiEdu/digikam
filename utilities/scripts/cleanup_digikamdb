#!/bin/sh

# Author: Andi Clemens, <andi dot clemens at gmx dot net>
#
# Description:
#
# This script will read in the digiKam configuration file to determine the
# database location. It will then make sure that digiKam is not running and
# call "sqlite3 DATABASE 'VACUUM;" on the database, to clean up and optimize
# the tables.
# This will often lead to great performance gain and a smaller database file
# size.

# -----------------------------------------------------------------------------
# FUNCTIONS
# -----------------------------------------------------------------------------

# $1: char
# $2 (optional): count
repeat_char()
{
    default_count=10
    for i in $(seq ${2:-$default_count}); do
        echo -n "$1"
    done
}

# $*: string
pretty_header()
{
    # use an offset to center text (default = 10)
    offset=$(repeat_char " ")
    offset_length=$(expr $(expr length "$offset") \* 2)

    # calculate length and print header
    str_length=$(expr length "$*")
    length=$(expr $str_length + $offset_length)

    # delimiter line
    delimiter=$(repeat_char "-" $length)

    echo $delimiter
    echo "${offset}$*${offset}"
    echo $delimiter
}

checkForRunningProgram()
{
    proc="$(ps aux | grep $username | grep -v $0 | grep -w digikam | grep -v grep)"
    if [ "$proc" != "" ]
    then
        echo "Please shutdown $programname before running this script."
        return 1
    fi
    return 0
}


# -----------------------------------------------------------------------------
# VARIABLES
# -----------------------------------------------------------------------------

# general information
username=$(whoami)
programname="digiKam"
programversion=$(digikam -v | grep -i digikam | cut -d: -f2 | sed 's/ //g')

# config file
configgroup="Album Settings"
databasekey="Database File Path"
configfile="digikamrc"
databasedir=$(kreadconfig --file $configfile --group "$configgroup" --key "$databasekey")

# -----------------------------------------------------------------------------
# MAIN
# -----------------------------------------------------------------------------

# make sure digiKam is not running
checkForRunningProgram
if [ $? = 1 ]; then
    exit 1
fi

# backup current working dir
curdir=$(pwd)

# try to enter the database directory
cd $databasedir 2&> /dev/null
if [ $? = 0 ]
then
    db_prefix="Database:"
    pretty_header "Cleanup databases ($programname $programversion)"
    echo -e "Location:\t$(pwd)"
    for db in $(find . -type f -name 'digikam*.db' -print)
    do
        echo -ne "${db_prefix:-"\\t"}\t$(basename $db) ... "
        sqlite3 $db "VACUUM;"
        if [ $? = 0 ]
        then
            echo "done"
        else
            echo "failed!"
            echo "sqlite3 was not able to cleanup the database."
        fi
        unset db_prefix
    done
    echo "Finished";
else
    echo -e "\nI was not able to enter the database folder ($databasedir).\n"
    echo "Make sure that the variable 'Database File Path' in $rcpath "
    echo "is set correctly and that you have permissions to access this folder."
fi

cd $curdir
